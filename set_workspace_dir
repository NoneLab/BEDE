#!/bin/bash

#############################
# Wriiten by Nakada Tokumei #
#############################

echo 'echo $(pwd) > $HOME/.none_builder/directory'

if [ ! -f $HOME/.none_builder/directory ]; then
    mkdir $HOME/.none_builder/
    mkdir -p $HOME/.none_builder/pkg
    touch $HOME/.none_builder/directory
fi

echo $(pwd) > $HOME/.none_builder/directory
